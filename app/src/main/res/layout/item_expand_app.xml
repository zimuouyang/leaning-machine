<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:background="@drawable/item_app_bg"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/app_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/permission_dp_10"
        android:src="@mipmap/moose_math" />

    <ImageView
        android:id="@+id/app_des"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:src="@mipmap/app_des_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/app_name"
        android:textColor="#FF5F5D5D"
        android:textSize="14sp"
        android:text="111111"
        android:padding="8dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>