<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/welcom_bg"
    tools:context=".activity.WelcomeActivity">

    <ImageView
        android:id="@+id/go_others"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="170dp"
        android:src="@mipmap/welcome_others" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/go_others"
        android:layout_alignStart="@+id/go_others"
        android:layout_marginStart="130dp"
        android:layout_marginTop="-30dp"
        android:src="@mipmap/welcome_math" />

    <ImageView
        android:id="@+id/go_language"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/go_english"
        android:layout_marginStart="70dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/go_english"
        android:src="@mipmap/welcome_language" />

    <ImageView
        android:id="@+id/go_english"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/start"
        android:layout_marginStart="50dp"
        android:src="@mipmap/welcome_english" />

    <ImageView
        android:id="@+id/start"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:scaleType="centerInside"
        android:src="@mipmap/welcome_start" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/welcome_go" />

</RelativeLayout>