<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/welcom_bg"
    android:scrollbars="none"
    tools:context=".activity.WelcomeActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/go_others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="140dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/welcome_others" />

                <ImageView
                    android:id="@+id/go_math"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:maxWidth="140dp"
                    android:layout_toEndOf="@+id/go_others"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/welcome_math" />

                <ImageView
                    android:id="@+id/go_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/go_others"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="130dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/welcome_english" />

                <ImageView
                    android:id="@+id/go_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/go_math"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/go_english"
                    android:adjustViewBounds="true"
                    android:maxWidth="130dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/welcome_language" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:adjustViewBounds="true"
                android:maxWidth="280dp"
                android:scaleType="fitXY"
                android:src="@mipmap/welcome_start" />

            <ImageView
                android:id="@+id/go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:adjustViewBounds="true"
                android:layout_alignParentBottom="true"
                android:maxWidth="170dp"
                android:paddingBottom="70dp"
                android:scaleType="fitXY"
                android:src="@mipmap/welcome_go" />
        </RelativeLayout>
</RelativeLayout>